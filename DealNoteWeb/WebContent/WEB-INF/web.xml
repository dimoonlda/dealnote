<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd" id="WebApp_ID" version="3.0">
  <display-name>DealNoteWeb</display-name>
  <security-constraint>
    <web-resource-collection>
      <web-resource-name>all jsp</web-resource-name>
      <url-pattern>/*</url-pattern>
    </web-resource-collection>
    <auth-constraint>
      <role-name>testD</role-name>
    </auth-constraint>
  </security-constraint>
  <login-config>
    <auth-method>FORM</auth-method>
    <form-login-config>
      <form-login-page>/jsp/login.jsp</form-login-page>
      <form-error-page>/jsp/error/login_error.jsp</form-error-page>
    </form-login-config>
  </login-config>
  <welcome-file-list>
    <welcome-file>/jsp/index.jsp</welcome-file>
  </welcome-file-list>
  <listener>
    <listener-class>biz.dealnote.web.listeners.AppServletContextListener</listener-class>
  </listener>
  <context-param>
    <param-name>dbContext</param-name>
    <param-value>java:comp/env/jdbc/dbAlterTestConn</param-value>
  </context-param>
  <resource-ref>
    <description>DTrader DB Connection Alter</description>
    <res-ref-name>jdbc/dbAlterTestConn</res-ref-name>
    <res-type>javax.sql.DataSource</res-type>
    <res-auth>Container</res-auth>
  </resource-ref>
    
  <servlet>
  	<servlet-name>ShowAgentGPS</servlet-name>
  	<servlet-class>biz.dealnote.web.controllers.AgentGpsController</servlet-class>
  </servlet>
  <servlet-mapping>
  	<servlet-name>ShowAgentGPS</servlet-name>
  	<url-pattern>/gps/ShowAgentGPS.do</url-pattern>
  </servlet-mapping>
  <servlet>
  	<servlet-name>AgentLocationsGson</servlet-name>
  	<servlet-class>biz.dealnote.web.controllers.LocationGsonController</servlet-class>
  </servlet>
  <servlet-mapping>
  	<servlet-name>AgentLocationsGson</servlet-name>
  	<url-pattern>/gps/GetAgentLocationsInGson.do</url-pattern>
  </servlet-mapping>
  
</web-app>