  <welcome-file-list>
    <welcome-file>/jsp/index.jsp</welcome-file>
  </welcome-file-list>
  
  <listener>
    <listener-class>biz.dealnote.web.listeners.AppServletContextListener</listener-class>
  </listener>

  <filter>  
        <filter-name>HibernateFilter</filter-name>  
        <filter-class>biz.dealnote.web.filters.HibernateSessionRequestFilter</filter-class>  
  </filter>  
  
  <filter-mapping>  
        <filter-name>HibernateFilter</filter-name>  
        <url-pattern>/*</url-pattern>  
  </filter-mapping> 
      
  <context-param>
    <param-name>dbContext</param-name>
    <param-value>java:comp/env/jdbc/dbAlterTestConn</param-value>
  </context-param>
  <context-param>
    <param-name>connectionType</param-name>
    <param-value>jpa</param-value>
  </context-param>
  
  <resource-ref>
    <description>DTrader DB Connection Alter</description>
    <res-ref-name>jdbc/dbAlterTestConn</res-ref-name>
    <res-type>javax.sql.DataSource</res-type>
    <res-auth>Container</res-auth>
  </resource-ref>
  
